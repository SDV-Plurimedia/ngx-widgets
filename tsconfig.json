{
  "compilerOptions": {
    "removeComments": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "dist"
  },
  "files": [
    "index.ts"
  ],
  "typeRoots": [
      "node_modules/@types"
    ],
  "exclude": [
    "node_modules",
    "dist",
    "runtime",
    "assets",
    "utils"
  ]
}
